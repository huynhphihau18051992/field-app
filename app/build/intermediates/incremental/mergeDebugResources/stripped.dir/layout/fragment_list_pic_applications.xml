<?xml version="1.0" encoding="utf-8"?>
                                                                   

    

                 
                            
                                                                                                
           


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:tag="layout/fragment_list_pic_applications_0" xmlns:android="http://schemas.android.com/apk/res/android">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_application"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/sv_employee"
            android:paddingBottom="36dp" />

        <ProgressBar
            android:id="@+id/pb_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_empty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sv_employee"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="16dp"
            android:text="Không tìm thấy kết quả"
            android:textColor="@color/colorRed"
            android:visibility="gone" />

    </RelativeLayout>

         