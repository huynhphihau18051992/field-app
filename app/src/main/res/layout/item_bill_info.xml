<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E9E9E9"
        android:fontFamily="@font/inter_semi_bold"
        android:paddingLeft="@dimen/_14sdp"
        android:paddingTop="@dimen/_12ssp"
        android:paddingRight="@dimen/_14sdp"
        android:paddingBottom="@dimen/_12ssp"
        android:text="Hoá đơn"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/_12ssp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_14sdp"
        android:fontFamily="@font/inter_semi_bold"
        android:text="Ảnh hoá đơn: "
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/_12ssp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_images"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_7sdp"
        android:layout_marginRight="@dimen/_14sdp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_14sdp"
        android:fontFamily="@font/inter_semi_bold"
        android:text="Mã hoá đơn: "
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/_12ssp" />

    <TextView
        android:id="@+id/txt_bill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_7sdp"
        android:layout_marginRight="@dimen/_14sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:background="@drawable/background_button_default"
        android:fontFamily="@font/inter_light"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingTop="@dimen/_14sdp"
        android:paddingRight="@dimen/_10sdp"
        android:paddingBottom="@dimen/_14sdp"
        android:text="2476227829191"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/_12ssp" />
</LinearLayout>