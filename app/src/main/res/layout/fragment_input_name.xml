<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="com.crayon.fieldapp.ui.screen.detailTask.changeGift.step1.InputNameViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#E9E9E9"
                    android:fontFamily="@font/inter_semi_bold"
                    android:paddingLeft="@dimen/_14sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingRight="@dimen/_14sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:text="Điền thông tin"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_14sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:fontFamily="@font/inter_semi_bold"
                    android:text="Họ và tên: "
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_12ssp" />

                <EditText
                    android:id="@+id/edt_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_14sdp"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:layout_marginRight="@dimen/_14sdp"
                    android:background="@drawable/background_button_selector"
                    android:fontFamily="@font/inter_regular"
                    android:hint="Nhập họ và tên"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLength="120"
                    android:maxLines="1"
                    android:nextFocusDown="@+id/edt_phone"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingTop="@dimen/_12ssp"
                    android:paddingRight="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_12sdp"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_14sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:fontFamily="@font/inter_semi_bold"
                    android:text="Số điện thoại: "
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_12ssp" />

                <EditText
                    android:id="@+id/edt_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_14sdp"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:layout_marginRight="@dimen/_14sdp"
                    android:background="@drawable/background_button_selector"
                    android:fontFamily="@font/inter_regular"
                    android:hint="Nhập số điện thoại"
                    android:imeOptions="actionDone"
                    android:inputType="phone"
                    android:maxLength="12"
                    android:maxLines="1"
                    android:nextFocusDown="@+id/btn_next"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingTop="@dimen/_12sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_12sdp"
                    android:textSize="@dimen/_12ssp" />

                <Button
                    android:id="@+id/btn_next"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_14sdp"
                    android:layout_marginTop="@dimen/_40sdp"
                    android:layout_marginRight="@dimen/_14sdp"
                    android:layout_marginBottom="@dimen/_40sdp"
                    android:background="@drawable/background_rectangle_blue_round_corner"
                    android:fontFamily="@font/inter_regular"
                    android:text="Tiếp theo" />

            </LinearLayout>


            <ProgressBar
                android:id="@+id/pb_loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone" />

        </RelativeLayout>


    </ScrollView>

</layout>