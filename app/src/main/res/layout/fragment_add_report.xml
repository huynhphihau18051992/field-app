<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="com.crayon.fieldapp.ui.screen.detailTask.reportCompetitor.ReportCompetitorViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/imb_ic_filter"
                android:layout_toRightOf="@+id/imb_ic_back"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_title"
                    style="@style/Toolbar_Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Tạo hoạt động" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/imb_ic_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:background="@null"
                android:padding="16dp"
                android:src="@drawable/ic_back" />

            <ImageButton
                android:id="@+id/imb_ic_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:background="@null"
                android:clickable="false"
                android:padding="16dp"
                android:src="@drawable/ic_sent_mail"
                android:tint="@color/colorWhite"
                android:visibility="visible" />

        </RelativeLayout>

        <ScrollView
            android:id="@+id/sv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_toolbar">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_14sdp"
                        android:layout_marginTop="@dimen/_14sdp"
                        android:fontFamily="@font/inter_semi_bold"
                        android:text="Tên nhãn hàng"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_12ssp" />

                    <EditText
                        android:id="@+id/edt_brand_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_14sdp"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:layout_marginRight="@dimen/_14sdp"
                        android:background="@drawable/background_button_selector"
                        android:fontFamily="@font/inter_light"
                        android:hint="Nhập tên nhãn hàng"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:maxLength="120"
                        android:maxLines="1"
                        android:nextFocusDown="@+id/edt_phone"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingTop="@dimen/_12ssp"
                        android:paddingRight="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_12sdp"
                        android:textSize="@dimen/_12ssp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_14sdp"
                        android:layout_marginTop="@dimen/_14sdp"
                        android:fontFamily="@font/inter_semi_bold"
                        android:text="Loại hoạt động"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_12ssp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_14sdp"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:layout_marginRight="@dimen/_14sdp"
                        android:background="@drawable/background_button_selector">

                        <Spinner
                            android:id="@+id/sp_activity"
                            style="@style/TextAppearance.AppCompat.Widget.DropDownItem"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:entries="@array/arr_activity"
                            android:paddingLeft="@dimen/_9sdp"
                            android:paddingTop="@dimen/_10sdp"
                            android:paddingRight="@dimen/_9sdp"
                            android:paddingBottom="@dimen/_10sdp"
                            android:textSize="@dimen/_10ssp" />
                    </RelativeLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_14sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:fontFamily="@font/inter_semi_bold"
                        android:text="Hình ảnh / Video"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_12ssp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_16sdp"
                        android:background="@drawable/background_rectangle_dashgap_round_corner"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:visibility="visible">

                            <ImageView
                                android:id="@+id/ic_photo"
                                android:layout_width="@dimen/_80sdp"
                                android:layout_height="@dimen/_80sdp"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/_16sdp"
                                android:src="@drawable/ic_photo" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/ic_photo"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:layout_marginBottom="@dimen/_16sdp"
                                android:fontFamily="@font/inter_regular"
                                android:text="Tải lên ảnh/video"
                                android:textAlignment="center"
                                android:textColor="#2C2C2C"
                                android:textSize="@dimen/_12ssp" />

                        </RelativeLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_images"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_200sdp"
                            android:layout_margin="@dimen/_16sdp"
                            android:visibility="gone" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_16sdp"
                            android:layout_marginRight="@dimen/_16sdp"
                            android:layout_marginBottom="@dimen/_16sdp"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <RelativeLayout
                                android:id="@+id/btn_camera"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:padding="@dimen/_8sdp">

                                <ImageView
                                    android:id="@+id/img_photo"
                                    android:layout_width="@dimen/_24sdp"
                                    android:layout_height="@dimen/_24sdp"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/ic_black_camera"
                                    android:tint="@color/colorPrimary" />


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="@dimen/_8sdp"
                                    android:layout_toRightOf="@+id/img_photo"
                                    android:fontFamily="@font/inter_regular"
                                    android:text="Chụp ảnh"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="@dimen/_12ssp" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/btn_gallery"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:padding="@dimen/_8sdp">

                                <ImageView
                                    android:id="@+id/img_gallary"
                                    android:layout_width="@dimen/_24sdp"
                                    android:layout_height="@dimen/_24sdp"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/ic_gallery"
                                    android:tint="@color/colorPrimary" />


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="@dimen/_8sdp"
                                    android:layout_toRightOf="@+id/img_gallary"
                                    android:fontFamily="@font/inter_regular"
                                    android:text="Tải ảnh"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="@dimen/_12ssp" />
                            </RelativeLayout>

                        </LinearLayout>

                    </LinearLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_14sdp"
                        android:layout_marginTop="@dimen/_14sdp"
                        android:fontFamily="@font/inter_semi_bold"
                        android:text="Ghi chú"
                        android:textColor="#323231"
                        android:textSize="@dimen/_12ssp" />

                    <EditText
                        android:id="@+id/edt_note"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_14sdp"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:layout_marginRight="@dimen/_14sdp"
                        android:background="@drawable/background_button_selector"
                        android:fontFamily="@font/inter_regular"
                        android:hint="Ghi chú / thông tin thêm"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:maxLength="200"
                        android:maxLines="2"
                        android:nextFocusDown="@+id/edt_phone"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingTop="@dimen/_12ssp"
                        android:paddingRight="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_12sdp"
                        android:textSize="@dimen/_12ssp" />
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/pb_loading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="gone" />

            </RelativeLayout>


        </ScrollView>
    </RelativeLayout>


</layout>